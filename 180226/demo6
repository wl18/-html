<html>
	<head>
		<meta charset="utf-8">
		<title>跨表元操作</title>
	</head>
	<body>
		<p>
			<table align="center" border="1" width="300" height="200">
			<!--设置表格的行-->
			<tr>
				<!--设置表格中的表项和跨多行-->
				<td rowspan=3>1</td><td>2</td><td>3</td><td>4</td>
			</tr>
			<tr align="center">
				<td>2</td><td>3</td><td>4</td>
			</tr>
			<tr align="right">
				<td>2</td><td>3</td><td>4</td>
			</tr>
			<tr>
				<td>1</td><td>2</td><td>3</td><td>4</td>
			</tr>
			</table>
		</p>
		<p>
			<!--设置表格-->
			<table border="1" width="300">
			<!--设置表格跨多列-->
			<tr>
				<td colspan="3">1</td><td>2</td>
			</tr>
			<tr>
				<td>1</td><td>2</td><td>3</td><td>4</td>
			</tr>
			<tr>
				<td>1</td><td>2</td><td>3</td><td>4</td>
			</tr>
			<tr>
				<td>1</td><td>2</td><td>3</td><td>4</td>
			</tr>
			</table>
		</p>
	</body>
</html>